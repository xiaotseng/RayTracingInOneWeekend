{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Release",
            "type": "shell",
            "command": "g++",
            "args":[
                "-static",
                "main.cpp",
                "-o",
                "${workspaceFolder}/bin/main.exe"
            ]
        },
        {
            "label": "Debug",
            "type": "shell",
            "command": "g++",
            "args":[
                "-static",
                "-g",
                "main.cpp",
                "-o",
                "${workspaceFolder}/bin/main_debug.exe"
            ]
        }
    ]
}